import java.awt.Color;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingConstants;
import javax.swing.border.Border;



public class Window implements ActionListener{
	
	Boolean operatorClicked=false;
	
	JFrame f;
	
	JLabel showLabel;
	String oldValue,newValue;
	float oldValueF,newValueF;
	float result;
	
	int flag;
	
	JButton sevenButton,eightButton,nineButton;
	JButton fourButton,fiveButton, sixButton;
	JButton oneButton,twoButton,threeButton;
	JButton dotButton,zeroButton,equalButton;
	JButton divButton,multipleButton,subtractButton,addButton;
	JButton clearButton;
	
	
	public Window() {
		f=new JFrame("Leske Calculator");
		f.setSize(600, 600);
		f.setLayout(null);
		f.setLocation(300, 100);
		
		showLabel=new JLabel();
		showLabel.setBounds(30, 40, 540, 60);
		showLabel.setBackground(Color.gray);
		showLabel.setFont(new Font("Ariel", Font.PLAIN,20));
		showLabel.setOpaque(true);
		showLabel.setForeground(Color.white);
		showLabel.setHorizontalAlignment(SwingConstants.RIGHT);
		f.add(showLabel);
		
		
		
		sevenButton=new JButton("7");
		sevenButton.setBounds(30, 130, 80, 80);
		sevenButton.setFont(new Font("Ariel", Font.PLAIN,40));
		sevenButton.addActionListener(this);
		f.add(sevenButton);
		
		eightButton=new JButton("8");
		eightButton.setBounds(130, 130, 80, 80);
		eightButton.setFont(new Font("Ariel", Font.PLAIN,40));
		eightButton.addActionListener(this);
		f.add(eightButton);
		
		nineButton=new JButton("9");
		nineButton.setBounds(230, 130, 80, 80);
		nineButton.setFont(new Font("Ariel", Font.PLAIN,40));
		nineButton.addActionListener(this);
		f.add(nineButton);
		
		fourButton=new JButton("4");
		fourButton.setBounds(30, 230, 80, 80);
		fourButton.setFont(new Font("Ariel", Font.PLAIN,40));
		fourButton.addActionListener(this);
		f.add(fourButton);
		
		fiveButton=new JButton("5");
		fiveButton.setBounds(130, 230, 80, 80);
		fiveButton.setFont(new Font("Ariel", Font.PLAIN,40));
		fiveButton.addActionListener(this);
		f.add(fiveButton);
		
		sixButton=new JButton("6");
		sixButton.setBounds(230, 230, 80, 80);
		sixButton.setFont(new Font("Ariel", Font.PLAIN,40));
		sixButton.addActionListener(this);
		f.add(sixButton);
		
		oneButton=new JButton("1");
		oneButton.setBounds(30, 330, 80, 80);
		oneButton.setFont(new Font("Ariel", Font.PLAIN,40));
		oneButton.addActionListener(this);
		f.add(oneButton);
		
		twoButton=new JButton("2");
		twoButton.setBounds(130, 330, 80, 80);
		twoButton.setFont(new Font("Ariel", Font.PLAIN,40));
		twoButton.addActionListener(this);
		f.add(twoButton);
		
		threeButton=new JButton("3");
		threeButton.setBounds(230, 330, 80, 80);
		threeButton.setFont(new Font("Ariel", Font.PLAIN,40));
		threeButton.addActionListener(this);
		f.add(threeButton);
		
		dotButton=new JButton(".");
		dotButton.setBounds(30, 430, 80, 80);
		dotButton.setFont(new Font("Ariel", Font.PLAIN,40));
		dotButton.addActionListener(this);
		f.add(dotButton);
		
		zeroButton=new JButton("0");
		zeroButton.setBounds(130, 430, 80, 80);
		zeroButton.setFont(new Font("Ariel", Font.PLAIN,40));
		zeroButton.addActionListener(this);
		f.add(zeroButton);
		
		equalButton=new JButton("=");
		equalButton.setBounds(230, 430, 80, 80);
		equalButton.setFont(new Font("Ariel", Font.PLAIN,40));
		equalButton.addActionListener(this);
		f.add(equalButton);
		
		divButton=new JButton("/");
		divButton.setBounds(330, 130, 80, 80);
		divButton.setFont(new Font("Ariel", Font.PLAIN,40));
		divButton.addActionListener(this);
		f.add(divButton);
		
		multipleButton=new JButton("x");
		multipleButton.setBounds(330, 230, 80, 80);
		multipleButton.setFont(new Font("Ariel", Font.PLAIN,40));
		multipleButton.addActionListener(this);
		f.add(multipleButton);
		
		subtractButton=new JButton("-");
		subtractButton.setBounds(330, 330, 80, 80);
		subtractButton.setFont(new Font("Ariel", Font.PLAIN,40));
		subtractButton.addActionListener(this);
		f.add(subtractButton);
		
		addButton=new JButton("+");
		addButton.setBounds(330, 430, 80, 80);
		addButton.setFont(new Font("Ariel", Font.PLAIN,40));
		addButton.addActionListener(this);
		f.add(addButton);
		
		clearButton=new JButton("C");
		clearButton.setBounds(430, 430, 80, 80);
		clearButton.setFont(new Font("Ariel", Font.PLAIN,40));
		clearButton.addActionListener(this);
		f.add(clearButton);
		
		
		f.setVisible(true);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource()==sevenButton) {
			if(operatorClicked) {
				showLabel.setText("7");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"7");
			}
			
		}
		else if(e.getSource()==eightButton) {
			if(operatorClicked) {
				showLabel.setText("8");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"8");
			}		}
		else if(e.getSource()==nineButton) {
			if(operatorClicked) {
				showLabel.setText("9");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"9");
			}		}
		else if (e.getSource()==fourButton) {
			if(operatorClicked) {
				showLabel.setText("4");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"4");
			}		}
		else if (e.getSource()==fiveButton) {
			if(operatorClicked) {
				showLabel.setText("5");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"5");
			}		}
		else if (e.getSource()==sixButton) {
			if(operatorClicked) {
				showLabel.setText("6");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"6");
			}		}
		else if (e.getSource()==oneButton) {
			if(operatorClicked) {
				showLabel.setText("1");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"1");
			}		}
		else if (e.getSource()==twoButton) {
			if(operatorClicked) {
				showLabel.setText("2");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"2");
			}		}
		else if (e.getSource()==threeButton) {
			if(operatorClicked) {
				showLabel.setText("3");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"3");
			}		}
		else if (e.getSource()==dotButton) {
			if(operatorClicked) {
				showLabel.setText(".");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+".");
			}		}
		else if (e.getSource()==zeroButton) {
			if(operatorClicked) {
				showLabel.setText("0");
				operatorClicked=false;
			}
			else {
				showLabel.setText(showLabel.getText()+"0");
			}		}
		
		
		else if (e.getSource()==equalButton) {
			if(flag==1){
			newValue=showLabel.getText();
			newValueF=Float.parseFloat(newValue);
			result=newValueF+oldValueF;
			showLabel.setText(result+"");
			}
			else if(flag==2) {
				newValue=showLabel.getText();
				newValueF=Float.parseFloat(newValue);
				result=oldValueF-newValueF;
				showLabel.setText(result+"");
			}
			else if (flag==3) {
				newValue=showLabel.getText();
				newValueF=Float.parseFloat(newValue);
				result=oldValueF*newValueF;
				showLabel.setText(result+"");
			}
			else if (flag==4) {
				newValue=showLabel.getText();
				newValueF=Float.parseFloat(newValue);
				result=oldValueF/newValueF;
				showLabel.setText(result+"");
			}
		}
		else if (e.getSource()==divButton) {
			operatorClicked=true;
			oldValue=showLabel.getText();
			oldValueF=Float.parseFloat(oldValue);
			showLabel.setText("/");
			flag=4;
			
		}
		else if (e.getSource()==multipleButton) {
			operatorClicked=true;
			oldValue=showLabel.getText();
			oldValueF=Float.parseFloat(oldValue);
			showLabel.setText("x");
			flag=3;
			
		}
		else if (e.getSource()==subtractButton) {
			operatorClicked=true;
			oldValue=showLabel.getText();
			oldValueF=Float.parseFloat(oldValue);
			showLabel.setText("-");
			flag=2;
			
		}
		else if (e.getSource()==addButton) {
			operatorClicked=true;
			oldValue=showLabel.getText();
			oldValueF=Float.parseFloat(oldValue);
			showLabel.setText("+");
			flag=1;
		}
		else if (e.getSource()==clearButton) {
			
			showLabel.setText("");
		}
	}


public class Calculator {

	public static void main(String[] args) {
		
		new Window();	//Window w=new Window(); here we have only need to call the constructor so we can skip first part

	}

}

}
